<!--pages/view/view.wxml-->
<!-- 视图组件（块级元素，独占一行，通常用作容器组件） -->

<!-- 基本使用 -->
<view class='box'>DeveloperLY</view>
<view>Hello World!</view>

<!-- hover-class: 当用户按下组件时，显示的样式 -->
<!-- 
  hover-start-time: 按住后多久出现点击状态，单位毫秒
  hover-stay-time: 手指松开后点击状态保留时间，单位毫秒
 -->
<view hover-class='click' hover-stay-time='{{0}}'>Hello World!</view>

<!-- hover-stop-propagation: 指定是否阻止节点的祖先出现点击状态 -->
<view class='box2' hover-class='box2-hover'>
  <view class='box1' 
      hover-class='hover-view'
      hover-stay-time="{{0}}"
      hover-stop-propagation>
    box1
  </view>
</view>