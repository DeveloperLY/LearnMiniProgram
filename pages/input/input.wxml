<!--pages/input/input.wxml--> 

<!-- input 基本使用 -->

<!-- value: input中的默认值 -->
<input value='DeveloperLY'/>

<!-- placeholder: 占位文字 -->
<input type='text' placeholder='请输入账号'/>

 <!-- password -->
<input password='{{true}}' placeholder='请输入密码'/>

<!-- type: 类型在真机上有效（模拟器看不到键盘） -->
<!-- 
  type 的合法值：
    text: 文本输入键盘
    number: 数字输入键盘
    idcard: 身份证输入键盘
    digit: 带小数点的数字键盘
 -->
<input type='number'/>

<!-- confirm-type: 在真机上有效（模拟器看不到键盘） -->
<!-- 
  confirm-type 的合法值：
    send: 右下角按钮为“发送”
    search: 右下角按钮为“搜索”
    next: 右下角按钮为“下一个”
    go: 右下角按钮为“前往”
    done: 右下角按钮为“完成”
 -->
 <input confirm-type='send'></input>

 <!-- 事件绑定和监听 -->
 <input bindinput='onInput'
        bindfocus='onFocus'
        bindblur='onBlur'
        bindconfirm='onConfirm'/>